{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión - Brekky{% endblock %}

{% block body %}
<div class="auth-wrapper">
    <div class="auth-card brekky-card">
        <h1 class="page-title">Iniciar sesión</h1>
        <p class="page-subtitle">
            Accedé a tu cuenta para ver tus recomendaciones, productos y tiendas cercanas.
        </p>

        {# Mensaje de error de Symfony Security (si hubo fallo al loguear) #}
        {% if error %}
            <div class="flash-message brekky-card" style="margin-bottom: 10px;">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {# Si ya está logueado, se puede avisar o redirigir desde el controlador #}
        {% if app.user %}
            <p class="auth-secondary" style="margin-bottom: 1.5rem;">
                Ya estás logueado como <strong>{{ app.user.userIdentifier }}</strong>.
            </p>
        {% endif %}

        <form method="post" class="js-loading-form">

            <div class="brekky-form-row">
                <label for="inputEmail">Correo electrónico</label>
                <input
                    type="email"
                    id="inputEmail"
                    name="email"
                    value="{{ last_username }}"
                    required
                    autofocus
                >
            </div>

            <div class="brekky-form-row">
                <label for="inputPassword">Contraseña</label>
                <input
                    type="password"
                    id="inputPassword"
                    name="password"
                    required
                >
            </div>

            <div class="brekky-form-row" style="display:flex; justify-content:space-between; align-items:center; gap:10px; font-size:0.9rem;">
                <label style="display:flex; align-items:center; gap:6px; cursor:pointer;">
                    <input type="checkbox" name="_remember_me">
                    Recordarme
                </label>

                <a href="{{ path('app_forgot_password') }}">¿Olvidaste tu contraseña?</a>
            </div>


            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-brekky" type="submit">
                Iniciar sesión
            </button>
        </form>

        <p class="auth-secondary">
            ¿Todavía no tenés cuenta?
            <a href="{{ path('app_register') }}">Registrate</a>
        </p>
    </div>
</div>
{% endblock %}
