{% extends 'base.html.twig' %}

{% block title %}Productos - {{ category.name }}{% endblock %}

{% block body %}
<h1>Productos de {{ category.name }}</h1>

<a class="btn-back" href="{{ path('catalog_categories') }}">← Volver a categorías</a>

<div style="display:flex; gap:20px; flex-wrap:wrap; margin-top:20px;">
    {% for product in products %}
        <div style="border:1px solid #ccc; padding:15px; width:220px; border-radius:8px;">
            
            {% if product.image %}
                <img src="{{ asset('images/' ~ product.image) }}" 
                     alt="{{ product.name }}" 
                     style="width:100%; height:auto; border-radius:5px;">
            {% endif %}

            <h3>{{ product.name }}</h3>
            <p>{{ product.description }}</p>
            <p><strong>${{ product.price }}</strong></p>

            <a class="btn-brekky" href="{{ path('catalog_product_detail', { id: product.id }) }}">
    Ver detalle →
</a>

        </div>
    {% endfor %}

    {% if products is empty %}
        <p>No hay productos en esta categoría.</p>
    {% endif %}
</div>
{% endblock %}
