{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Brekky{% endblock %}

{% block body %}

<a class="btn-back" href="{{ path('catalog_products_by_category', { id: category.id }) }}">
    ← Volver a productos
</a>

<h1 class="page-title" style="margin-top: 1rem;">{{ product.name }}</h1>

<div class="brekky-card" style="max-width: 420px; margin-top: 1rem;">
    {% if product.image %}
        <img src="{{ asset('images/' ~ product.image) }}"
             alt="{{ product.name }}"
             class="product-detail-img">
    {% endif %}

    <p><strong>Precio:</strong> ${{ product.price }}</p>

    <p><strong>Descripción:</strong></p>
    <p>{{ product.description }}</p>

    <p><strong>Categoría:</strong> {{ category.name }}</p>
</div>

{% endblock %}
